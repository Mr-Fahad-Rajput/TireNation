<div class="w-full mt-8">
    <form id="checkout-form">
      <div class="mb-4">
        <label for="address" class="block mb-1">Address:</label>
        <input type="text" id="address" name="address" class="w-full p-2 border border-gray-500 rounded" required>
      </div>
      <div class="mb-4">
        <label for="zipCode" class="block mb-1">Zip Code:</label>
        <input type="text" id="zipCode" name="zipCode" class="w-full p-2 border border-gray-500 rounded" required>
      </div>
      <div class="mb-4">
        <label for="paymentMethod" class="block mb-1">Payment Method:</label>
        <select id="paymentMethod" name="paymentMethod" class="w-full p-2 border border-gray-500 rounded" required>
          <option value="">Select a payment method</option>
          <option value="creditCard">Credit Card</option>
          <option value="debitCard">Debit Card</option>
          <option value="paypal">PayPal</option>
        </select>
      </div>
      <div class="mb-4">
        <label for="cardNumber" class="block mb-1">Card Number:</label>
        <input type="text" id="cardNumber" name="cardNumber" class="w-full p-2 border border-gray-500 rounded" required>
      </div>
      <div class="mb-4">
        <label for="expiryDate" class="block mb-1">Expiry Date (MM/YY):</label>
        <input type="text" id="expiryDate" name="expiryDate" class="w-full p-2 border border-gray-500 rounded" required>
      </div>
      <div class="mb-4">
        <label for="cvv" class="block mb-1">CVV:</label>
        <input type="text" id="cvv" name="cvv" class="w-full p-2 border border-gray-500 rounded" required>
      </div>
      <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded hover:bg-opacity-80">
        Continue to Checkout
      </button>
    </form>
  </div>
  